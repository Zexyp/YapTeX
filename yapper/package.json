{
  "name": "yapper",
  "displayName": "Yapper",
  "publisher": "zexyp",
  "description": "YapTeX editing",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:yaptex"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "yapper.helloWorld",
        "title": "Hello World",
        "category": "Yapper"
      },
      {
        "command": "yapper.build",
        "title": "YapTeX Build",
        "category": "Yapper"
      }
    ],
    "languages": [
      {
        "id": "yaptex",
        "extensions": [
          ".yap"
        ],
        "aliases": [
          "YapTeX"
        ]
      }
    ],
    "grammars": [
      {
        "language": "yaptex",
        "path": "./syntaxes/yaptex.json",
        "scopeName": "source.yaptex",
        "injectTo": [
          "text.html.markdown"
        ]
      }
    ],
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets/yaptex.json"
      },
      {
        "language": "yaptex",
        "path": "./snippets/yaptex.json"
      }
    ],
    "configuration": {
      "title": "YapTeX",
      "properties": {
        "yapper.environmentPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path to the Python virtual environment where YapTeX is [installed](https://github.com/Zexyp/YapTeX?tab=readme-ov-file#installation).",
          "scope": "machine-overridable"
        },
        "yapper.outputDirectory": {
          "type": "string",
          "default": "yaptex-out",
          "markdown": "Output drectory name.",
          "scope": "machine-overridable"
        },
        "yapper.arguments.flags.verbose": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Run YapTeX with `--verbose` flag.",
          "scope": "machine-overridable"
        },
        "yapper.arguments.flags.pedantic": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Run YapTeX with `--pedantic` flag.",
          "scope": "machine-overridable"
        },
        "yapper.arguments.rargs": {
          "type": "string",
          "default": "",
          "description": "Renderer arguments. New lines get atomatically replaced with semicolons.",
          "scope": "machine-overridable",
          "editPresentation": "multilineText"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@vscode/vsce": "^3.7.0"
  }
}
